@model IEnumerable<Tp_Pweb_22_23.Models.ViewModels.UserRolesViewModel>
@{
    ViewData["Title"] = "User Roles";
}
<h1>User Roles</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Avatar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimeiroNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UltimoNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roles)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.Avatar == null)
                    {
                        <img id="MyAvatar" class="img-thumbnail" style="height:40px;width:auto" src="~/img/user.png" />
                    }
                    else
                    {
                        <img id="MyAvatar" class="img-thumbnail" style="height:40px;width:auto"
                     src="data:image/*;base64,@(Convert.ToBase64String(item.Avatar))" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrimeiroNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UltimoNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @String.Join(',',  item.Roles)
                </td>
                <td>
                    @using (Html.BeginForm("Talepler", "UserRolesManager", FormMethod.Post))
                    {
                    <input id="chk" name="chkeco" asp-for="@item.Activo" asp-route-id="@item.UserId" class="form-check-input" />
                    <label class="form-check-label" asp-for="@item.Activo">@item.Activo</label>
                    <input type="submit" value="Submit" />
                    } 
               </td>
                <td>
                </td>
            </tr>
        }
    </tbody>
</table>
