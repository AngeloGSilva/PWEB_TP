@model Tp_Pweb_22_23.Models.ApplicationUser
@{
    ViewData["Title"] = "Manage User Roles";
}
<div class="container">
    @if (Model.Avatar == null)
    {
        <img id="Foto" class="img-thumbnail" style="height:200px;width:auto" src="~/img/user.png" />
    }
    else
    {
        <img id="MyAvatar" class="img-thumbnail" style="height:200px;width:auto"
         src="data:image/*;base64,@(Convert.ToBase64String(Model.Avatar))" />
    }
</div>

<div>
    <h4>Detalhes do Utilizador</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrimeiroNome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrimeiroNome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UltimoNome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UltimoNome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Empresa.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Empresa.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-dark" role="button" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
    <a class="btn btn-dark" role="button" asp-action="Index">Voltar</a>
</div>
