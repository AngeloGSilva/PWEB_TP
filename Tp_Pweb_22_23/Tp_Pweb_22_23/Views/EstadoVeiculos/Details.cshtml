@model Tp_Pweb_22_23.Models.EstadoVeiculo

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Estado do Veiculo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroKm)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroKm)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Danos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Danos)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Observacoes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Observacoes)
        </dd>
        <dt class="col-sm-2">
            Funcionário responsável @*@Html.DisplayNameFor(model => model.Funcionario.Email)*@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Funcionario.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ESTADO)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ESTADO)
        </dd>
    </dl>
</div>
@if (Model.Danos)
{
    <div class="col-md-4">

        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">

                @{
                    @if (@ViewBag.NFich > 0)
                    {
                        int qtd = 0;
                        foreach (var file in ViewBag.Ficheiros)
                        {
                            string style = qtd == 0 ? "active" : "";

                            <div class="carousel-item @style">
                                <div class="image">
                                    <img src="@file" class="d-block w-100" alt="...">
                                </div>
                            </div>
                            qtd++;
                        }
                    }
                    else
                    {
                        <p class="alert alert-warning text-danger"> Foram reportados Danos, mas não foram disponibilizadas imagens!</p>
                    }
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
}else{
    <p class="alert alert-info text-danger"> Não foram reportados Danos, por isso não estão disponiveis imagens!</p>
}

