@model IEnumerable<Tp_Pweb_22_23.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Categorias</h1>

@*<p>
    <a asp-action="Create">Adicionar nova categoria</a>
</p>
*@
<form method="get" asp-action="Create" asp-controller="Categorias">
    <button class="btn btn-dark">Adicionar Categorias</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    <a class="btn btn-sm btn-sm mt-1 btn-secondary" role="button" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-sm mt-1 btn-secondary" role="button" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    <a class="btn btn-sm btn-sm mt-1 btn-danger" role="button" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
