@model Tp_Pweb_22_23.Models.Categoria

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar nova categoria</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label hidden asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" placeholder="Nome da Categoria"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <input type="submit" value="Criar" class="btn btn-success" />
                <a class="btn btn-dark" role="button" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
