@model Tp_Pweb_22_23.Models.ViewModels.AllVeiculosViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Os Nossos Veiculos</h1>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model.ListaDeVeiculos)
    {
            <div class="col">
            <div class="card h-100 align-items-center">
                @if (item.Foto == null)
                {
                    <img src="/img/carIcon.png" class="card-img-top w-50" alt="...">
                }
                else
                {
                    <img src="data:image/*;base64,@(Convert.ToBase64String(item.Foto))" class="card-img-top w-50 " alt="...">
                }
                    <div class="card-body">
                        <h5 class="card-title">Card title</h5>
                        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                    </div>
                    <div class="card-footer w-100">
                    <small class="text-muted">Localização:@item.Localizacao</small>
                    </div>
                </div>
            </div>
    }
</div>