@model Tp_Pweb_22_23.Models.ViewModels.AllVeiculosViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Os Nossos Veiculos</h1>

<div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
    @foreach (var item in Model.ListaDeVeiculos)
    {
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="/img/carIcon.png" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@item.Marca</h5>
                        <p class="card-text">@item.Localizacao</p>
                        <p class="card-text"><small class="text-muted">Localização: @item.Localizacao</small></p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>