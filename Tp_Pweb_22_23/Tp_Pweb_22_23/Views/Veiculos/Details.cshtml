@model Tp_Pweb_22_23.Models.Veiculo

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    @if (Model.Foto == null)
    {
        <img id="Foto" class="img-thumbnail" style="height:200px;width:auto" src="~/img/carIcon.png" />
    }
    else
    {
        <img id="MyAvatar" class="img-thumbnail" style="height:200px;width:auto"
         src="data:image/*;base64,@(Convert.ToBase64String(Model.Foto))" />
    }
</div>

