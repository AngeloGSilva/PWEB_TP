@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>


    <form class="row gx-4 gy-2 align-items-center">
        <div class="col-sm-3">
            <label class="visually" for="specificSizeInputName">localizacao</label>
            <input type="text" class="form-control" id="specificSizeInputName" placeholder="Porto">
        </div>
        <div class="col-sm-3">
            <label class="visually" for="specificSizeInputName">Data de Entrega</label>
            <input type="date" class="form-control" placeholder="Data de Entrega">
        </div>
        <div class="col-sm-3">
            <label class="visually" for="specificSizeInputName">Data de Recolha</label>
            <input type="date" class="form-control" placeholder="Data de Recolha">
        </div>
        <div class="col-sm-3">
            <label class="visually" for="specificSizeSelect">Categoria</label>
            <select class="form-select" id="specificSizeSelect">
                <option selected>Choose...</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
        </div>
        <div class="col-auto">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="autoSizingCheck2">
                <label class="form-check-label" for="autoSizingCheck2">
                    Remember me
                </label>
            </div>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>

</div>
