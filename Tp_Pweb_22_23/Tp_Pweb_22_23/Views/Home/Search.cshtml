@model Tp_Pweb_22_23.Models.ViewModels.SearchResultadosViewModel

@{
    ViewData["Title"] = "Index";
}

<style>
    .card-img-top {
        max-height: 200px;
        max-width: 200px;
    }

</style>


@if(Model.VeiculosDisponiveis.Count != 0){
    <h1>Os nossos Automóveis</h1>
    <h3>Data de Recolha: @Model.DataRecolha?.ToString("dd MMMM yyyy")</h3>
    <h3>Data de Entrega: @Model.DataEntrega?.ToString("dd MMMM yyyy")</h3>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model.VeiculosDisponiveis)
    {
        <div class="col">
            <div class="card h-100 align-items-center">
                @if (item.Foto == null)
                {
                    <img id="foto" src="/img/carIcon.png" class="card-img-top" alt="...">
                }
                else
                {
                    <img id="foto" src="data:image/*;base64,@(Convert.ToBase64String(item.Foto))" class="card-img-top" alt="...">
                }
                    <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                        <form method="post" asp-action="FazReserva">
                            <input type="hidden" asp-for="DataRecolha" name="DataRecolha" value="@Model.DataRecolha">
                            <input type="hidden" asp-for="DataEntrega" name="DataEntrega" value="@Model.DataEntrega">
                            <input type="hidden" name="IdVeiculo" value="@item.Id">
                            <button class="w-50 btn btn-sm btn-outline-secondary" style="text-align: center;" type="submit">Reservar</button>
                        </form>
                </div>
                    <div class="card-footer w-100" style="display: flex; align-content:center; justify-content: center;">
                        <small class="text-muted" style="text-align: center; font-size: 20px">Total: <b>@Model.Total€</b></small>
                </div>
            </div>
        </div>
    }
</div>

}else
{
    <h2>Sem Veiculos Disponiveis para as seguintes datas</h2>
    <h3>Data de Recolha: @Model.DataRecolha?.ToString("dd MMMM yyyy")</h3>
    <h3>Data de Entrega: @Model.DataEntrega?.ToString("dd MMMM yyyy")</h3>
}