@model Tp_Pweb_22_23.Models.Reserva

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>Deseja mesmo eliminar esta reserva?</h3>
<div>
    <hr />
    <div class="container">
        @if (Model.Veiculo.Foto == null)
        {
            <img id="Foto" class="img-thumbnail" style="height:200px;width:auto" src="~/img/carIcon.png" />
        }
        else
        {
            <img id="MyAvatar" class="img-thumbnail" style="height:200px;width:auto"
             src="data:image/*;base64,@(Convert.ToBase64String(Model.Veiculo.Foto))" />
        }
    </div>

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataRecolha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataRecolha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataEntrega)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataEntrega)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Veiculo.Marca)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Veiculo.Marca)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Veiculo.Modelo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Veiculo.Modelo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a class="btn btn-dark" role="button" asp-action="Index">Voltar</a>
    </form>
</div>
