@model Tp_Pweb_22_23.Models.Reserva

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes da Reserva</h1>

<div class="container">
    @if (Model.Veiculo.Foto == null)
    {
        <img id="Foto" class="img-thumbnail" style="height:200px;width:auto" src="~/img/carIcon.png" />
    }
    else
    {
        <img id="MyAvatar" class="img-thumbnail" style="height:200px;width:auto"
         src="data:image/*;base64,@(Convert.ToBase64String(Model.Veiculo.Foto))" />
    }
</div>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataRecolha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataRecolha, "{0:dd MMMM yyyy}")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataEntrega)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataEntrega, "{0:dd MMMM yyyy}")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)€
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Veiculo.Marca)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Veiculo.Marca)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Veiculo.Modelo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Veiculo.Modelo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Veiculo.Empresa.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Veiculo.Empresa.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Veiculo.Empresa.Classificacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Veiculo.Empresa.Classificacao) (@Html.DisplayFor(model => model.Veiculo.Empresa.NrClassificacoes))
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Voltar</a>
</div>
