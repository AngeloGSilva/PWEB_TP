@model Tp_Pweb_22_23.Models.ViewModels.ClassificaEmpresaViewModel


@{
    ViewData["Title"] = "Classifica Empresa";
}

<h1>Os nossos Automóveis</h1>

<div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col">
            <div class="card h-65 align-items-center">
                <div class="card-body align-items-center">
                    <h5 class="card-title align-items-center">Marca: @Model.veiculo.Marca</h5>
                <h5 class="card-title align-items-center">Modelo: @Model.veiculo.Modelo</h5>
                    <h7 class="card-text align-items-center">
                        Total pago @Model.reserva.Total €<br />
                    </h7>
                    <h7>@Model.empresa.Classificacao (@Model.empresa.NrClassificacoes)</h7>

                </div>
                <div class="card-footer w-100">
                    <small class="text-muted">Cliente: @Model.cliente.Email</small>
                </div>
            </div>
        </div>
</div>
<form method="get" asp-action="Classificar" asp-controller="Reservas">
    <div class="form-group">
        <label class="control-label"></label>
        <input type="hidden" name="idEmpresa" class="form-control" value="@Model.empresa.Id" />@Model.empresa.Id
    </div>
    <div class="form-group">
        <label class="control-label">Classificao</label>
        <input name="avaliacao" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Criar" class="btn btn-primary" />
    </div>
</form>
